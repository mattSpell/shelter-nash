%header.centered-navigation
  .centered-navigation-wrapper
    %a.mobile-logo{:href => "javascript:void(0)"}
      %img= image_tag('home.png')
    %a.centered-navigation-menu-button{:href => ""} MENU
    %ul.centered-navigation-menu
      -# %li.nav-link
      -#   %a{:href => "javascript:void(0)"} About Us
      - if user_signed_in?
        %li.nav-link
          %a= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "logout"
      - else
        %li.nav-link
          %a.sign-up{:href => new_user_registration_path} Sign Up
      %li.nav-link.logo
        %a.logo{:href => "/"}
          %img= image_tag('home.png')
        - unless user_signed_in?
          %li.nav-link
            %a.sign-up{:href => new_user_session_path} Log In
